{
    "name"        : "greenf/quasar",
    "description" : "DDD app generator",
    "type"        : "library",
    "require"     : {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "symfony/console": "^4.1",
        "nette/php-generator": "^3.2",
        "graphaware/neo4j-php-client": "^4.0"

    },
    "autoload"    : {
        "psr-4": {
            "Greenf\\Quasar\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Greenf\\Quasar\\": "tests/"
        }
    }
}
